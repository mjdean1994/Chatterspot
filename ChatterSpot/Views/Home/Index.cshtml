@{
    ViewBag.Title = "Create New Room";
}

<div class="container-fluid">
    <div class="row">
        @if (!string.IsNullOrEmpty(ViewBag.AlertTitle))
        {
            <div class="alert alert-@ViewBag.AlertType">
                <strong>@ViewBag.AlertTitle:</strong> @ViewBag.AlertMessage
            </div>
        }
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <br/>
            <p>ChatterBox is a free way to get chat rooms up and running in no time at all! No sign up is required, but keep in mind that by using ChatterBox, you're agreeing to the <a href="@Url.Action("Terms", "Home")">Terms of Service</a> and are accountable for your actions. Enjoy!</p>
            @using (Html.BeginForm("CreateRoom", "Home", FormMethod.Post))
            {
                <div class="text-center">
                    <br/>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-header"></i>
                        </span>
                        <input type="text" class="form-control" name="title" required placeholder="Room Title" />
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-lock"></i>
                        </span>
                        <input type="password" class="form-control" name="accessPassword" placeholder="Access Password (optional)" />
                    </div>
                    <br/>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-key"></i>
                        </span>
                        <input type="password" class="form-control" name="adminPassword" required placeholder="Administration Password" />
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-primary"><i class="fa fa-plus-square"></i> Create ChatterBox</button>
                </div>
            }
        </div>
    </div>
</div>